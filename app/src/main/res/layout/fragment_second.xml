<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_ligth"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".onboard.SecondFragment">


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView_pageOneTwo"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="@dimen/image_width_onboard"
        android:layout_height="@dimen/height_onboard"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/margin_top_107dp"
        app:lottie_rawRes="@raw/second_pageonboard"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/send"
        android:layout_margin="20dp"
        android:text="@string/propustit"
        android:textColor="@color/dark_orange"

        />
    <TextView
        android:id="@+id/title_itemmm"
        android:layout_width="@dimen/widtj"
        android:layout_height="@dimen/height"
        android:layout_margin="@dimen/margin_40dp"
        android:gravity="top"
        android:text="@string/second_onboard_text"
        android:textAlignment="center"
        android:textColor="@color/white_F3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/animationView_pageOneTwo"
        tools:ignore="RtlCompat" />

</androidx.constraintlayout.widget.ConstraintLayout>